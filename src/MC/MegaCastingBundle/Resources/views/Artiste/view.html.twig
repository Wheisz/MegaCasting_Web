{# views/Artiste/view #}

{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/mcmegacasting/css/Chocolat-0.3.1/css/chocolat.css')}}" type="text/css" media="screen" charset="utf-8">
 {% endblock %}


{% block body %}
<div class="mainConteneur">
    <div class="titre_view">
        ARTISTE
    </div>
    <div id="artiste">
        <div class="artiste_picture">
            {% include 'MCMegaCastingBundle:Artiste:photoProfile.html.twig' %}   
        </div>
        <div class="artiste_info">
            <div class="artiste_info_generale">
                <span class="sous-titre">Informations générales</span>
                <span class="artiste_name">Pseudo : {{ artiste.idutilisateur.Pseudo }}</span> 
                {% include 'MCMegaCastingBundle:Artiste:domaineMetier.html.twig' %}  
                <span class="artiste_age">Age : {{ artiste.getAge }} ans</span>             
            </div>   
            <div class="artiste_info_physique">
                <span class="sous-titre">Caractéristiques physiques</span>
            {% include 'MCMegaCastingBundle:CaracPhysique:view.html.twig' %}
            </div>
        </div>        
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}
    <!-- Script pour le fonctionnement du plugin Chocolat -->
    <script type="text/javascript" src="{{ asset('bundles/mcmegacasting/js/Chocolat-0.3.1/js/jquery.chocolat.js') }}"></script>
    <script>
        $(function(){
            $(".artiste_picture_profil").Chocolat({
                displayAsALink: false,
                linkImages    : false,
                overlayColor  : '#000'
            });
        });
    </script>
{% endblock %}